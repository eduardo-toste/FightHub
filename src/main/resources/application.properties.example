# ==================== DATABASE ====================
spring.datasource.url=jdbc:postgresql://localhost:5432/fighthub
spring.datasource.username=example_user
spring.datasource.password=example_password
spring.datasource.driver-class-name=org.postgresql.Driver

# ==================== JPA ====================
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.open-in-view=false

# ==================== FLYWAY ====================
spring.flyway.enabled=true
spring.flyway.locations=classpath:db/migration

# ==================== LOGGING ====================
# Define o nome da aplicação (usado nos logs)
spring.application.name=fighthub

# Define o caminho base para salvar os arquivos de log
logging.file.path=logs

# Ativa log de queries SQL
logging.level.org.hibernate.SQL=DEBUG
# Ativa log dos parâmetros das queries
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# Exibe log das requisições HTTP com payload
logging.level.org.springframework.web=INFO
logging.level.org.springframework.security=INFO

# ==================== TOKEN JWT ====================
# Chave secreta usada para assinar o JWT
security.jwt.secret=example_secret_key

# Tempo de expiração do access token (em milissegundos): 15 minutos
security.jwt.expiration=900000

# Tempo de expiração do refresh token (em milissegundos): 7 dias
security.jwt.refresh-expiration=604800000

# ==================== MAIL ====================
mail.host=smtp.gmail.com
mail.port=587
mail.username=example@gmail.com
mail.password=example_password
mail.tls-enabled=true

# ==================== UPLOADS ====================
uploads.profile-dir=uploads/profiles